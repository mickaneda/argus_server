<% if @pap_policy['resources'] -%>
<% @pap_policy['resources'].each do |resource| -%>
resource "<%= resource['resource'] %>" {
  obligation "http://glite.org/xacml/obligation/local-environment-map" {}
  <% if resource['action'] -%>
  action "<%= resource['action'] %>" {
  <% else -%>
  action ".*" {
  <% end -%>
  <% resource['permit'].each do |value| -%>
    rule permit { <%= value %> }
  <% end -%>
  }
}
<% end -%>
<% end -%>
